    <link rel="stylesheet" type="text/css" href="~/Contents/login.css" />

    <script src="~/Contents/common.js"></script>
</head>
<body>
    <!--Header Include-->
    @{Html.RenderPartial("header");}

    <section id="visual"> <img src="~/Contents/Image/musicalnote.png" /> <span style="font-weight: bold;">고양이 하숙</span>에 어서오세요. </section>
